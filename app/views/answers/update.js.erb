var updatedAnswer = $('.answer[data-answer-id=<%= @answer.id %>]')

<% if @answer.errors.blank? %>
  $('textarea', updatedAnswer).text('<%= @answer.body %>')
  $('.body', updatedAnswer).text('<%= @answer.body %>')
<% else %>
  $('.errors-answer-single', updatedAnswer).html('<%= j render "shared/errors", resource: @answer %>')
<% end %>
