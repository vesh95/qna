var updatedAnswer = $('.answer[data-answer-id=<%= @answer.id %>]')

<% if @answer.errors.blank? %>
  $(updatedAnswer).html('<%= j render @answer %>');
<% else %>
  $(".errors-answer", updatedAnswer).html('<%= render 'shared/errors', resource: @answer %>')
<% end %>

$(document).trigger('renderedGist')
